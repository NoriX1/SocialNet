<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.3.xsd">

    <bean id = "network" class = "model.Network"></bean>
    <bean id = "receiver" class="commands.Receiver">
        <constructor-arg index="0" ref="network"></constructor-arg>
    </bean>
    <bean id = "invoker" class="commands.Invoker"></bean>
    <bean id = "createNewUserCommand" class="commands.impl.CreateNewUserCommand">
        <constructor-arg index="0" ref="receiver"></constructor-arg>
    </bean>
    <bean id = "loginCommand" class="commands.impl.LoginCommand">
        <constructor-arg index="0" ref="receiver"></constructor-arg>
    </bean>
    <bean id = "sendPublicMessage" class="commands.impl.SendPublicMessage">
        <constructor-arg index="0" ref="receiver"></constructor-arg>
    </bean>
    <bean id = "sendPrivateMessage" class="commands.impl.SendPrivateMessage">
        <constructor-arg index="0" ref="receiver"></constructor-arg>
    </bean>
    <bean id = "addFriendCommand" class="commands.impl.AddFriendCommand">
        <constructor-arg index="0" ref="receiver"></constructor-arg>
    </bean>
    <bean id = "showAllFriendsCommand" class="commands.impl.ShowAllFriendsCommand">
        <constructor-arg index="0" ref="receiver"></constructor-arg>
    </bean>
    <bean id = "findUserInNetwork" class="commands.impl.FindUserInNetwork">
        <constructor-arg index="0" ref="receiver"></constructor-arg>
    </bean>
    <bean id = "showAllPublicMessages" class="commands.impl.ShowAllPublicMessages">
        <constructor-arg index="0" ref="receiver"></constructor-arg>
    </bean>
    <bean id = "showAllPrivateMessages" class="commands.impl.ShowAllPrivateMessages">
        <constructor-arg index="0" ref="receiver"></constructor-arg>
    </bean>
    <bean id = "showRatingCommand" class="commands.impl.ShowRatingCommand">
        <constructor-arg index="0" ref="receiver"></constructor-arg>
    </bean>
    <bean id = "dataDao" class="dao.impl.DataDaoImpl">
        <constructor-arg index="0" ref="receiver"></constructor-arg>
    </bean>
    <bean  id ="menu" class="services.Menu">
        <constructor-arg index="0" ref="invoker"></constructor-arg>
        <constructor-arg index="1" ref="createNewUserCommand"></constructor-arg>
        <constructor-arg index="2" ref="loginCommand"></constructor-arg>
        <constructor-arg index="3" ref="sendPublicMessage"></constructor-arg>
        <constructor-arg index="4" ref="sendPrivateMessage"></constructor-arg>
        <constructor-arg index="5" ref="addFriendCommand"></constructor-arg>
        <constructor-arg index="6" ref="showAllFriendsCommand"></constructor-arg>
        <constructor-arg index="7" ref="findUserInNetwork"></constructor-arg>
        <constructor-arg index="8" ref="showAllPublicMessages"></constructor-arg>
        <constructor-arg index="9" ref="showAllPrivateMessages"></constructor-arg>
        <constructor-arg index="10" ref="showRatingCommand"></constructor-arg>
        <constructor-arg index="11" ref="dataDao"></constructor-arg>
    </bean>
</beans>